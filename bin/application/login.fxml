<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyEvent?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
    <children>
        <Label layoutX="156.0" layoutY="51.0" text="Login">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="txtUsername" layoutX="98.0" layoutY="94.0" prefHeight="25.0" prefWidth="204.0" promptText="Username" onKeyPressed="#handleKeyPress"/>
        <PasswordField fx:id="txtPassword" layoutX="98.0" layoutY="136.0" prefHeight="25.0" prefWidth="204.0" promptText="Password" onKeyPressed="#handleKeyPress"/>
        <Button fx:id="btnLogin" layoutX="160.0" layoutY="176.0" mnemonicParsing="false" onAction="#handleLogin" text="Login" />
        <Text fx:id="txtError" layoutX="14.0" layoutY="22.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Error message will be shown here." />
    </children>
</AnchorPane> 